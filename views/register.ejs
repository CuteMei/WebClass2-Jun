<html>
    <head>
        <title>JHH register-page</title>
        <%- include('partials/header1.ejs') %>
    </head>
    <body>
        <h6 style="color: rgb(4, 12, 252)"><i>JHH Register Page</i></h6>
        <%- include('partials/navbar1.ejs') %>
        <div class="container"><br>
            <h1><strong>Register</strong></h1>
            <form action="/register" method="post">
                <input type="text" name="name" placeholder="Enter Name" required />
                <input type="email" name="email" placeholder="Enter Email" required /><br><br>
                <input type="password" name="password" placeholder="Enter Password" required />
                <input type="password" name="passwordVerify" placeholder="Confirm Password" required />
                <button type="submit">Register</button>
            </form> 
            <p>Already have an account? Go to <a href="login">Login</a> please?</p>
            <h4></h4>           
        </div>
    </body><br><br><br>
